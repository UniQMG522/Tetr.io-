{
  "manifest_version": 2,
  "name": "Tetr.io+",
  "version": "0.4.0",

  "description": "Tetr.io client enhancer",
  "icons": { "256": "icons/tetrio-256.png" },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "unlimitedStorage",
    "storage",
    "*://*.tetr.io/*"
  ],

  "page_action": {
    "default_icon": "icons/tetrio-256.png",
    "default_title": "Tetr.io+",
    "default_popup": "source/popup/index.html",
    "show_matches": ["*://*.tetr.io/*"]
  },

  "background": {
    "scripts": [
      "source/background/createRewriteFilter.js",
      "source/background/music/music-tetriojs-filter.js",
      "source/background/music/music-request-filter.js",
      "source/background/music/missing-music-patch-filter.js",
      "source/background/sfx/sfx-tetriojs-filter.js",
      "source/background/sfx/sfx-request-filter.js",
      "source/background/bg/bg-tetriojs-filter.js",
      "source/background/bg/bg-request-filter.js",
      "source/background/april-fools-filter.js",
      "source/background/svg-filter.js",
      "source/background/content-script-communicator.js",
      "source/background/osd-request-filter.js"
    ]
  },

  "content_scripts": [{
    "matches": ["https://tetr.io/"],
    "css": [
      "source/content/osd.css"
    ],
    "js": [
      "source/content/content-script.js",
      "source/content/osd.js"
    ],
    "run_at": "document_idle"
  }],

  "web_accessible_resources": [
    "resource/template.svg",
    "source/injected/osd.js"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_specific_settings": {
    "gecko": {
      "id": "tetrio-plus@example.com"
    }
  }
}
